<!DOCTYPE html>
<html>
  <head>
    <title>Plop</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <script>
     function allowDrop(ev)
{
ev.preventDefault();
}

function drag(ev)
{
ev.dataTransfer.setData("Text",ev.target.id);
}

function drop(ev)
{
ev.preventDefault();
var data = ev.dataTransfer.getData("Text");
ev.target.appendChild(document.getElementById(data));
}
    </script>
    <link rel="stylesheet" href="main.css" type="text/css">	 
  </head>
  <body>
    <div id="Navigation_Bar">
      <img src="images/button.png" width="60" height="60" style="margin-bottom:5px;"
		onmouseover="src='images/button2.png'" onmousedown="src='images/button.png'" onmouseout="src='images/button.png'"></br>
      <img src="images/button.png" width="60" height="60" style="margin-bottom:5px;" 
		onmouseover="src='images/button2.png'" onmousedown="src='images/button.png'" onmouseout="src='images/button.png'"></br>
      <img src="images/button.png" width="60" height="60" onmouseover="src='images/button2.png'" 
		onmousedown="src='images/button.png'" onmouseout="src='images/button.png'"></br>
    </div>
    <div id="Pool" ondrop="drop(event)" ondragover="allowDrop(event)">
    

    </div>
